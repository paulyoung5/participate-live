<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

    <% include ../partials/roomHeader.ejs %>

    <main class="ui very padded segment container">

        <div id="whiteboard" class="ui loading segment">

            <canvas width="300" height="300"></canvas>

        </div>

        <div class="ui basic segment">

            <h3 class="ui dividing header">{{ item.title }}</h3>

            <div class="ui two doubling link cards">

                <a class="ui card" v-on:click="selectAnswer(key)" :class="{ green: key === selectedAnswer }" v-for="(value, key) in item.answers" href="#">

                  <div class="content">

                    <h3 class="ui center aligned header">

                      <div class="content">

                          {{ key }}
                          <div class="sub header">{{ value }}</div>

                      </div>

                    </h3>

                  </div>

                </a>

            </div>

        </div>

        <a class="ui large fluid primary button"><i class="send icon"></i> Submit</a>

    </main>

    <% include ../partials/roomScripts.ejs %>

    <script>
        var room = <%-room%>;
    </script>
    <script type="text/javascript" src="/js/session.js"></script>
    <script type="text/javascript" src="/js/client.js"></script>

</body>
</html>
