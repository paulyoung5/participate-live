<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

  <div class="pusher">

    <div class="ui fixed menu">
    <div class="ui container">

      <a href="#" class="header item">
        participate.live
      </a>

      <a href="#" class="right item mobileMenuButton"><i class="content icon"></i></a>

    </div>
  </div>

      <div class="ui main text container">

        <h2>Fruit poll</h2>

        <div id="fruitPoll" class="ui form">
          <div class="grouped fields pollOptions">
        <label for="fruit">Select your second favorite fruit:</label>
        <div class="field">
          <div class="ui radio checkbox">
            <input type="radio" name="fruit" checked="" tabindex="0" class="hidden">
            <label>Apples</label>
            <div class="applesCount">{{applesCount}} votes</div>
          </div>
        </div>
        <div class="field">
          <div class="ui radio checkbox">
            <input type="radio" name="fruit" tabindex="0" class="hidden">
            <label>Grapefruit</label>
            <div class="grapefruitCount">{{grapefruitCount}} votes</div>
          </div>
        </div>
      </div>
    </div>

          <button class="ui primary button eventEmitter">
        Submit
      </button>

      </div>

    </div> <!-- close pusher tag -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript" src="/semantic/dist/semantic.min.js"></script>
    <script src="../../socket.io/socket.io.js"></script>
    <script type="text/javascript" src="/scripts/vue/dist/vue.js"></script>
    <script type="text/javascript" src="js/app.js"></script>


</body>
</html>
