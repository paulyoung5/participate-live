<!DOCTYPE html>
<html>
<head>
  <% include ../../partials/header.ejs %>
</head>

<body>

    <div id="nav">
      <% include ../../partials/nav.ejs %>
  </div>

  <div class="ui hidden divider"></div>

  <main>

    <div class="ui centered stackable grid container">

        <div class="five wide column">

          <div class="ui secondary huge vertical fluid menu">
            <a href="/dashboard" class="item">
              <i class="group icon"></i> My Rooms
            </a>
            <a href="/settings" class="active item">
              <i class="cogs icon"></i> Settings
            </a>
          </div>

        </div>

        <div class="eleven wide column">

          <div class="ui padded segment">

            <h3 class="ui header">
              <i class="cogs icon"></i>
              <div class="content">
                Settings
                <div class="sub header">Manage your preferences</div>
              </div>
            </h3>

            <form class="ui equal width form">

              <div class="ui basic padded segment">

                <div class="fields">

                  <div class="field">
                    <label>Display name</label>
                    Update your display name
                  </div>

                  <div class="field">
                    <input type="text" placeholder="Display name" value="Paul">
                  </div>

                </div>

                <div class="fields">

                  <div class="field">
                    <label>Some toggle</label>
                    Something something
                  </div>

                  <div class="field">
                    <div class="ui toggle checkbox">
                      <input type="checkbox" tabindex="0" class="hidden">
                    </div>
                  </div>

                </div>

              </div>

              <button class="ui primary labeled icon button" tabindex="0"><i class="save icon"></i> Save</button>

            </form>

          </div>

        </div>

      </div>

  </main>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script type="text/javascript" src="/semantic/dist/semantic.min.js"></script>
  <script type="text/javascript">
      $('.ui.checkbox').checkbox();
      var user = <%-user%>;
  </script>
  <% if(env.NODE_ENV === 'development') { %>
  <script type="text/javascript" src="/scripts/vue/dist/vue.js"></script>
  <% } else { %>
  <script type="text/javascript" src="/scripts/vue/dist/vue.min.js"></script>
  <% } %>
  <script type="text/javascript" src="js/app.js"></script>

</body>
</html>
